<Window x:Class="Restaurant_Manager.Windows.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant_Manager.Windows"
        mc:Ignorable="d"
        Title="ErrorWindow" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Height="100" Width="300" AllowsTransparency="True" Background="Transparent">


    <Border Background="White" CornerRadius="12" >

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock x:Name="ErrorBox" Text="Test" Foreground="Red" FontSize="18" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="20" TextAlignment="Center" FontWeight="Bold"></TextBlock>

            <Button Click="Button_Click"  Style="{StaticResource Error.Button}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="70" Grid.Row="1"></Button>


        </Grid>
    </Border>
</Window>
