<Window x:Class="Restaurant_Manager.Windows.ReplyCommentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant_Manager.Windows" xmlns:controls="clr-namespace:Restaurant_Manager.Classes.Controls"
        mc:Ignorable="d"
        Title="EditCommentWindow" Height="100" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Canvas>
        <controls:CustomTextBox x:Name="CommentBox" HintText="Comment" Width="432" Height="40" Canvas.Left="37" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center"></controls:CustomTextBox>
        <Button Click="Submit_Click" Width="100" Height="30" Foreground="White" Style="{StaticResource Shared.BigButton3}" Content="Submit"  Canvas.Left="347" Canvas.Top="60"></Button>
        <Button Click="Cancel_Click" Width="100" Height="30" Foreground="White" Style="{StaticResource Shared.BigButton}" Content="Cancel" Canvas.Left="57" Canvas.Top="60"></Button>
    </Canvas>
</Window>
