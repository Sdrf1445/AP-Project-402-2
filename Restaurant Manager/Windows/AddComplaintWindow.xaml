<Window x:Class="Restaurant_Manager.Windows.AddComplaintWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant_Manager.Windows" xmlns:controls="clr-namespace:Restaurant_Manager.Classes.Controls"
        mc:Ignorable="d"
        Title="AddComplaintWindow" Height="300" Width="492" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <TextBlock Text="Add Complaint" FontSize="25" FontWeight="Bold" Width="200" Height="30" Margin="10,10,282,260"></TextBlock>
        <controls:CustomTextBox Width="200" Height="40" Margin="28,60,264,200" HintText="Title"></controls:CustomTextBox>
        <controls:CustomTextBox Width="200" Height="40" Margin="266,60,26,200" HintText="Restaurant Name"></controls:CustomTextBox>
        <controls:CustomTextBox Height="40" Margin="28,127,26,133" HintText="Description"/>

        <Button Content="Save" Width="100" Height="40" Margin="297,223,95,37" Style="{StaticResource Shared.SmallButton3}" Foreground="White"></Button>
        <Button Content="Discard" Width="100" Height="40" Margin="93,223,299,37" Style="{StaticResource Shared.SmallButton}" Foreground="White"></Button>


    </Grid>
</Window>
