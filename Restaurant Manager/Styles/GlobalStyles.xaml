<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowBase" TargetType="{x:Type Window}">
        <Style.Setters>
            <Setter Property="Height" Value="850"></Setter>
            <Setter Property="Width" Value="1511"></Setter>
        </Style.Setters>
    </Style>
    <Style x:Key="PageBase" TargetType="{x:Type Page}">
        <Style.Setters>
            <Setter Property="Height" Value="850"></Setter>
            <Setter Property="Width" Value="1511"></Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>